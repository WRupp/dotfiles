#!/bin/bash

#Translate Deutsch to English

# Check if input is provided
if [ -z "$1" ]; then
  echo "Usage: translate_de_to_en <German word or phrase>"
  exit 1
fi

# Combine all arguments into a single phrase
GERMAN_TEXT="$*"

# Call Ollama API with translation prompt
curl -s http://localhost:11434/api/chat -d "{
  \"model\": \"gemma3:1b\",
  \"stream\": false,
  \"messages\": [
    {
      \"role\": \"user\",
      \"content\": \"Translate the following German word or phrase into English: '$GERMAN_TEXT'. Only output the English translation, nothing else.\"
    }
  ]
}" | jq -r '.message.content'

